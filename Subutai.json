{
  "name": "env",
  "description": "test",
  "version": "1.0.0",
  "author": "Sydyk",
  "containers": [
    {
      "hostname": "www",
      "template": "apache",
      "peer-criteria": "gr1",
      "size": "${containerSize}",
      "peer-layout": "d1"
    },
    {
      "hostname": "kkk",
      "template": "apache",
      "peer-criteria": "gr1",
      "size": "${containerSize}",
      "peer-layout": "d2"
    }
  ],
  "peer-layouts": [
    {
      "name": "d1",
      "peer-count": "1",
      "container-per-peer": "1"
    },
     {
      "name": "d2",
      "peer-count": "3",
      "container-per-peer": "1"
    }
    
  ],
  "peer-criteria": [
    {
      "name": "gr1"
    }
  ],
  "user-variables": {
  "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "TINY",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
  }
}
